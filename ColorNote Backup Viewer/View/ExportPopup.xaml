<UserControl x:Class="ColorNote_Backup_Viewer.View.ExportPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ColorNote_Backup_Viewer.View"
             mc:Ignorable="d" 
             d:DesignHeight="50.4" d:DesignWidth="165.6">
    <Popup x:Name="exportPopup" StaysOpen="False" Placement="MousePoint">
        <StackPanel Background="LightGray">
            <Button Content="텍스트 파일로 내보내기" Click="EH_ExportToTextClick"/>
            <Button Content="HTML 파일로 내보내기" Click="EH_ExportToHTMLClick"/>
        </StackPanel>
    </Popup>
</UserControl>
